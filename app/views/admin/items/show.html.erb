<div class="container">
  <div class="row">
    <h4 class="d-flex align-items-center m-3" style="background-color: #EEEEEE;">商品詳細</h4>
  </div>

  <div class="row">
    <div class="col-lg-4 col-md-auto"><%= image_tag @item.get_image(450,300) %></div>
    <div class="col-lg-8 col-md-auto">
    <table class="d-flex my-auto mx-auto" >
      <tr>
        <td>商品名</td>
        <td><%= @item.name %></td>
      </tr>
      <tr>
        <td>商品説明</td>
        <td><%= @item.introduction %></td>
      </tr>
      <tr>
        <td>ジャンル</td>
        <td><%= @item.genre.name %></td>
      </tr>
      <tr>
        <td>税込価格（税抜価格）</td>
        <td><%= @item.add_tax_price.to_s(:delimited) %>円（<%= @item.price.to_s(:delimited) %>円）</td>
      </tr>
      <tr>
        <td>販売ステータス</td>
        <td>
          <% if @item.is_active == true %>
            <div class="text-success"><%= "販売中"%></div>
          <% else %>
            <div class="text-secondary"><%= "販売停止中" %></div>
          <% end %>
        </td>
      </tr>
      <tr>
        <td></td>
        <td><%= link_to '編集する', edit_admin_item_path(@item.id), class: "btn btn-success" %></td>
      </tr>


    </div>
  </div>
</table>




