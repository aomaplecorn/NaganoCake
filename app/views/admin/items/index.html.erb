<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h4 class="d-flex align-items-center m-3" style="background-color: #EEEEEE;">商品一覧</h4>
  </div>
  <div class="d-flex align-items-center justify-content-end"><%= link_to "新規追加", new_admin_item_path %></div>

<div class="row">
<table class="table">
  <thead>
    <tr style="background-color: #EEEEEE;">
      <th>商品ID</th>
      <th>商品名</th>
      <th>税抜価格</th>
      <th>ジャンル</th>
      <th>ステータス</th>
    </tr>
  </thead>
  <tbody>
<% @items.each do |item| %>
  <tr>
    <td><%= item.id %></td>
    <td>
      <%= link_to admin_item_path(item.id) do %>
        <span  class="text-dark"><%= item.name %></span>
      <% end %>
    </td>
    <td><%= item.price.to_s(:delimited) %></td>
    <td><%= item.genre.name %></td>
    <td>
      <% if item.is_active == true %>
        <div class="text-success"><%= "販売中" %></div>
      <% else %>
        <div class="text-secondary"><%= "販売停止中" %></div>
      <% end %>
    </td>
  </tr>
<% end %>
  </tbody>
</table>

</div>
<div class="d-flex align-items-center justify-content-center" ><%= paginate @items %></div>
