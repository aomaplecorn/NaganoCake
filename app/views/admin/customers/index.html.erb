<div class="container">
  <div class="row">
    <h4 class="d-flex align-items-center m-3" style="background-color: #EEEEEE;">会員一覧</h4>
  </div>

<table class="table">
  <thead>
    <tr style="background-color: #EEEEEE;">
      <td>会員ID</td>
      <td>氏名</td>
      <td>メールアドレス</td>
      <td>ステータス</td>
    </tr>
  </thead>
  <tbody>
    <% @customers.each do |customers| %>
    <tr>
      <td><%= customers.id %>
      <td>
        <%= link_to(admin_customer_path(customers.id)) do %>
          <span class="text-dark"><%= customers.last_name %><%= customers.first_name %></span>
        <% end %>
      </td>
      <td><%= customers.email %></td>
      <td>
        <% if customers.is_deleted == false %>
          <div class="text-success"><%= "有効" %></div>
        <% else %>
          <div class="text-secondary"><%= "退会" %></div>
        <% end %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>

</div>
<div class="d-flex align-items-center justify-content-center" ><%= paginate @customers %></div>
