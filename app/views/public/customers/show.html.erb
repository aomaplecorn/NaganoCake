<div class="container">
  <div class="row">
    <div class="col-1"></div>
    <h4 class="d-flex align-items-center m-4" style="background-color: #EEEEEE;">マイページ</h4>
  </div>
<div class="row">
  <div class="m-3"><strong>登録情報</strong>
    <span class="ml-3"><%= link_to "編集する", public_edit_mypage_path, class: "btn btn-success" %></span>
  </div>
</div>

<table class="table table-bordered">
  <tr>
    <th style="background-color: #EEEEEE;">氏名</th>
    <td><%= @customer.last_name %>　<%= @customer.first_name %></td>
  </tr>
  <tr>
    <th style="background-color: #EEEEEE;">カナ</th>
    <td><%= @customer.last_name_kana %>　<%= @customer.first_name_kana %></td>
  </tr>
  <tr>
    <th style="background-color: #EEEEEE;">郵便番号</th>
    <td><%= @customer.postal_code %></td>
  </tr>
  <tr>
    <th style="background-color: #EEEEEE;">住所</th>
    <td><%= @customer.address %></td>
  </tr>
  <tr>
    <th style="background-color: #EEEEEE;">電話番号</th>
    <td><%= @customer.telephone_number %></td>
  </tr>
  <tr>
    <th style="background-color: #EEEEEE;">メールアドレス</th>
    <td><%= @customer.email %></td>
  </tr>
</table>


<div class="row">
  <div class="m-3"><strong>配送先</strong>
    <span class="ml-3"><%= link_to "一覧を見る", public_addresses_path, class: "btn btn-primary" %></span>
  </div>
</div>
<div class="row">
  <div class="col-2m-3"><strong>注文履歴</strong>
    <span class="ml-3"><%= link_to "一覧を見る", public_orders_path, class: "btn btn-primary" %></span>
  </div>
</div>







