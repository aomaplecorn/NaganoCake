<h1>Public::Orders#show</h1>

<h1>注文履歴詳細</h1>


<div><strong>注文情報</strong></div>
    <table border="1" style="float:bottom; margin-right: 10px">
        <tr>
            <td>注文日</td>
            <td><%= l @order.created_at, format: :YMD %></td>
        </tr>
        <tr>
            <td>配送先</td>
            <td><%= '〒' + @order.postal_code %></br>
            <%= @order.address %></br>
            <%= @order.name %></td>
        </tr>
        <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method_i18n %></td>
        </tr>
        <tr>
            <td>ステータス</td>
            <td><%= @order.status %></td>
        </tr>
    </table>

<div><strong>請求情報</strong></div>
    <table border="1">
        <tr>
            <td>商品合計</td>
            <td><%= @total_price.to_s(:delimited) %></td>
        </tr>
        <tr>
            <td>配送料</td>
            <td><%= @order.shipping_cost.round.to_s(:delimited) %></td>
        </tr>
        <tr>
            <td>ご請求額</td>
                <td><%= @order.total_payment.round.to_s(:delimited) %></td>
        </tr>
    </table>

<div><strong>注文内容</strong></div>
    <table border="1">
        <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
        </tr>
    <% @order_details.each do |order_detail| %>
        <% if order_detail.order_id == @order.id %>
        <tr>
            <td><%= order_detail.item.name %></td>
            <td><%= order_detail.item.add_tax_price.round.to_s(:delimited) %></td>
            <td><%= order_detail.amount %></td>
            <td><%= order_detail.subtotal.round.to_s(:delimited) %></td>
        </tr>
        <% end %>
    <% end %>
    </table>


