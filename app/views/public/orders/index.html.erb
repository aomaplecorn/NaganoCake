<h1>Public::Orders#index</h1>

<h1>注文履歴一覧</h1>

<table border="1">
    <thead>
        <tr>
            <td>注文日</td>
            <td>配送先</td>
            <td>注文商品</td>
            <td>支払金額</td>
            <td>ステータス</td>
            <td>注文詳細</td>
        </tr>
    </thead>
    <tbody>
        <% @orders.each do |order| %>
        <tr>
            <!--注文日-->
            <td><%= l order.created_at, format: :YMD %></td>
            <!--配送先-->
            <td><%= '〒' + order.postal_code %></br>
                <%= order.address %></br>
                <%= order.name %></td>
            <!--注文商品-->
            <td><% order_details = OrderDetail.all %>
                <% order_details.each do |order_detail| %>
                    <% if order_detail.order_id == order.id %>
                        <%= order_detail.item.name %></br>
                    <% end %>
                <% end %>
            </td>
            <!--「支払金額」合計を表示-->
            <td><%= order.total_payment.to_s(:delimited) %>円</td>
            <!--現在のステータス（入金・発送など）を表示-->
            <td><%= order.status %></td>
            <td><%= link_to "表示する", public_order_path(order.id) %></td>
        </tr>
        <% end %>
    </tbody>
</table>

