<div class="container">
  <div class="row">
    <%= render 'public/genres/sidebar' %>

    <div class="col-4 mt-4">
      <%= image_tag @item.get_image(350,250) %>
    </div>
    <div class="col-5 offset-1 mt-4">
      <h4><strong><%= @item.name %></strong></h4>
      <p><%= @item.introduction %></p>
      <div class="mt-5">
        <strong style="font-size: 20px;">¥ <%= @item.add_tax_price.to_s(:delimited) %></strong>（税込）
      </div>

      <div class="mt-3">
        <%= form_with model: [:public,@cart_item] do |f| %>
          <%= f.hidden_field :item_id, :value => @item.id %>
          <%= f.select :amount, *[1..10], prompt: "個数選択" %>
          <%= f.submit "カートに入れる", class: "btn btn-success" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
